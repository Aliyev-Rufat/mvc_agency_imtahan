@using WebApplication16.Models;
@model Portfolio



<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Name" class="form-label">Name</label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="Position" class="form-label">Position</label>
                <input class="form-control" asp-for="Position">
                <span asp-validation-for="Position" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="PhotoFile" class="form-label">PhotoFile</label>
                <input class="form-control" asp-for="PhotoFile">
                <span asp-validation-for="PhotoFile" style="color:red"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
